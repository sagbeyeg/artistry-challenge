
<h3><% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %><h3>

<h2>Create Artist </h2>

<%= form_for @artist do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br><br>

  <%= f.label :age %>:
  <%= f.number_field :age %><br><br>

  <%= f.label :title %>:
  <%= f.text_field :title %><br><br>

  <%= f.submit %>

<% end %>